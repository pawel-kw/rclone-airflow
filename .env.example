# Environment Variables for Portainer Stack
# Copy these variables to your Portainer stack environment variables

# Timezone (use IANA timezone names)
TIMEZONE=UTC

# Airflow Configuration
AIRFLOW_UID=1001
AIRFLOW_IMAGE=apache/airflow:2.5.1
AIRFLOW_FERNET_KEY=
AIRFLOW_DAGS_PAUSED=true
AIRFLOW_WWW_USER_USERNAME=admin
AIRFLOW_WWW_USER_PASSWORD=admin

# Ports
AIRFLOW_WEBSERVER_PORT=9876
RCLONE_WEB_PORT=5572
FLOWER_PORT=5555

# Rclone Credentials
RCLONE_USERNAME=rclone
RCLONE_PASSWORD=rclone

# Optional: Email configuration for Airflow notifications
# AIRFLOW__SMTP__SMTP_HOST=smtp.gmail.com
# AIRFLOW__SMTP__SMTP_STARTTLS=true
# AIRFLOW__SMTP__SMTP_SSL=false
# AIRFLOW__SMTP__SMTP_USER=your-email@gmail.com
# AIRFLOW__SMTP__SMTP_PASSWORD=your-app-password
# AIRFLOW__SMTP__SMTP_PORT=587
# AIRFLOW__SMTP__SMTP_MAIL_FROM=your-email@gmail.com
